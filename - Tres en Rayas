#include <iostream> // libreria para entrada y salida 

using namespace std;

const int TAMANIO = 3; // se define el tamaño de la amtriz (3x3) 
char tablero[TAMANIO][TAMANIO]; // Matriz que representa el tañao de el tablero 

// Funcion para iniciar el tablero de juego con espacios vacios 
void inicializarTablero() {
    for (int i = 0; i < TAMANIO; ++i) { // se recorre las filas 
        for (int j = 0; j < TAMANIO; ++j) { se reorre las clumnas 
            tablero[i][j] = ' '; // y se inicia cada celda con un espacio vacio  
        }
    }
}

void mostrarTablero() {
    cout << "  0 1 2\n";
    for (int i = 0; i < TAMANIO; ++i) {
        cout << i << " ";
        for (int j = 0; j < TAMANIO; ++j) {
            cout << tablero[i][j];
            if (j < TAMANIO - 1) cout << "|";
        }
        cout << "\n";
        if (i < TAMANIO - 1) cout << "  -----\n";
    }
}

bool hacerMovimiento(int fila, int columna, char jugador) {
    if (fila >= 0 && fila < TAMANIO && columna >= 0 && columna < TAMANIO && tablero[fila][columna] == ' ') {
        tablero[fila][columna] = jugador;
        return true;
    }
    return false;
}

bool verificarVictoria(char jugador) {
    for (int i = 0; i < TAMANIO; ++i) {
        if (tablero[i][0] == jugador && tablero[i][1] == jugador && tablero[i][2] == jugador) return true;
        if (tablero[0][i] == jugador && tablero[1][i] == jugador && tablero[2][i] == jugador) return true;
    }
    if (tablero[0][0] == jugador && tablero[1][1] == jugador && tablero[2][2] == jugador) return true;
    if (tablero[0][2] == jugador && tablero[1][1] == jugador && tablero[2][0] == jugador) return true;
    return false;
}

bool tableroLleno() {
    for (int i = 0; i < TAMANIO; ++i) {
        for (int j = 0; j < TAMANIO; ++j) {
            if (tablero[i][j] == ' ') return false;
        }
    }
    return true;
}

int main() {
    inicializarTablero();
    char jugadorActual = 'X';
    bool victoria = false;

    while (!victoria && !tableroLleno()) {
        mostrarTablero();
        int fila, columna;
        if (jugadorActual == 'X') {
            cout << "Turno del Jugador 1 (X), ingresa fila y columna (ejemplo: 0 0): ";
        } else {
            cout << "Turno del Jugador 2 (O), ingresa fila y columna (ejemplo: 0 0): ";
        }
        cin >> fila >> columna;

        if (hacerMovimiento(fila, columna, jugadorActual)) {
            victoria = verificarVictoria(jugadorActual);
            if (!victoria) {
                jugadorActual = (jugadorActual == 'X') ? 'O' : 'X';
            }
        } else {
            cout << "Movimiento inválido. Inténtalo de nuevo.\n";
        }
    }

    mostrarTablero();

    if (victoria) {
        if (jugadorActual == 'X') {
            cout << "¡Jugador 1 (X) gana!\n";
        } else {
            cout << "¡Jugador 2 (O) gana!\n";
        }
    } else {
        cout << "Es un empate.\n";
    }

    return 0;
}

